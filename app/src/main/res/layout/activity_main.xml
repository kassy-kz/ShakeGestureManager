<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="orz.kassy.accelerometertest.MainActivity">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Accel"/>
            <TextView
                android:id="@+id/txtAccelX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"/>
            <TextView
                android:id="@+id/txtAccelY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y"/>
            <TextView
                android:id="@+id/txtAccelZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Accel2"/>
            <TextView
                android:id="@+id/txtAccelX2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"/>
            <TextView
                android:id="@+id/txtAccelY2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y"/>
            <TextView
                android:id="@+id/txtAccelZ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Gyro"/>
            <TextView
                android:id="@+id/txtGyroX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"/>
            <TextView
                android:id="@+id/txtGyroY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y"/>
            <TextView
                android:id="@+id/txtGyroZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="LinearAccel"/>
            <TextView
                android:id="@+id/txtLinearAccelX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"/>
            <TextView
                android:id="@+id/txtLinearAccelY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y"/>
            <TextView
                android:id="@+id/txtLinearAccelZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Rotation"/>
            <TextView
                android:id="@+id/txtRotationX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"/>
            <TextView
                android:id="@+id/txtRotationY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y"/>
            <TextView
                android:id="@+id/txtRotationZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Gravity"/>
            <TextView
                android:id="@+id/txtGravityX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"/>
            <TextView
                android:id="@+id/txtGravityY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y"/>
            <TextView
                android:id="@+id/txtGravityZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Device"/>
            <TextView
                android:id="@+id/txtAtan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"/>
            <TextView
                android:id="@+id/txtGravityAngle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"/>
            <TextView
                android:id="@+id/txtDeviceRoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y"/>
            <TextView
                android:id="@+id/txtAccelAngle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z"/>
            <TextView
                android:id="@+id/txtSlashAngle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:id="@+id/txtPitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pitch : "/>
    <TextView
        android:visibility="gone"
        android:id="@+id/txtRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="roll : "/>
    <TextView
        android:visibility="gone"
        android:id="@+id/txtRoll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="roll2 : "/>
    <TextView
        android:visibility="gone"
        android:id="@+id/txtAzimuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="azimuth : "/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="start"/>
    <Button
        android:id="@+id/btnStop"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="stop"/>

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="slash : "/>
</LinearLayout>
